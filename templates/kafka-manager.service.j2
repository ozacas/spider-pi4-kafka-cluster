[Unit]
Description=Apache Kafka distributed message queue service
After=network.target kafka.service
ConditionPathExists=

[Service]
EnvironmentFile=-/etc/default/kafka-manager
ExecStart=/home/acas/kafka-manager-2.0.0.2/bin/kafka-manager -Dconfig.file=/home/acas/kafka-manager-2.0.0.2/conf/application.conf -Dhttp.port=8080
KillMode=process
Restart=on-failure
RestartPreventExitStatus=255

[Install]
WantedBy=multi-user.target
Alias=kafka-manager.service
